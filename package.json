{
  "main": "src/electron/main.js",
  "scripts": {
    "electron": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.johnkakuk.nodejournal",
    "productName": "Node Journal",
    "files": [
      "src/**/*",
      "prisma/**/*",
      "package.json"
    ],
    "extraResources": [
      "node_modules/@prisma/**",
      "node_modules/.prisma/**"
    ],
    "mac": { "category": "public.app-category.productivity" },
    "win": { "target": "nsis" },
    "linux": { "target": ["AppImage"], "category": "Utility" }
  }
}